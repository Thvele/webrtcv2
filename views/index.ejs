<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Call</title>
    <link rel="stylesheet" type="text/css" href="style.css" />
    <script src="https://muazkhan.com:9001/dist/RTCMultiConnection.min.js"></script>
    <script src="https://muazkhan.com:9001/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/32b1ec723f.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/emojionearea.min.css">
    <script type="text/javascript" src="js/emojionearea.min.js"></script>
  </head>
  <header>
    <div class="header">
      <div class="options">
        <div class="options__left">
          <div id="stop-video" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="mute-button" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="show-chat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
          <div id="share-display" class="options__button">
            <i class="fa-solid fa-display"></i>
          </div>
          <div id="drop-call" class="options__button" style="background-color: red;">
            <i class="fa-solid fa-phone-slash"></i>
          </div>
          <div>
            <span id="user-id" class="user-id">Your id: </span>
          </div>
        </div>
        <div class="options__right" style="display: flex;">
          <div id="btn-invite" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div> 
  </header>
  <body onload="OnLoad()">
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">
            
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window" id="main-chat-window">
          <div class="messages" id="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" class="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script type="text/javascript" src="index_script.js"></script>
  <script>
      $(document).ready(function() {
        $('#chat_message').emojioneArea({
          inline: true,
          events: {
            keyup: function (editor, event) {
              if(event.keyCode === 13) {
                editor.blur();
                editor.focus();
                OnSendMessage();
              };
            }
          }
        });
      });
  </script>
</html>